<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>malisa的个人主页</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            height: 100vh;
            background-image: url('./bj.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            background-color: rgba(165, 165, 165, 0.4);

        }

        .container-header {
            align-items: center;
            justify-content: center;
            display: flex;
            flex-direction: column;
            text-align: center;
            margin-top: 5vh;

        }

        .container-header img {
            width: 20vh;
            height: 20vh;
            border-radius: 50%;
            overflow: hidden;
            object-fit: cover;
        }

        .container-header h1 {
            color: rgba(255, 255, 255, 0.938);
        }

        hr {
            width: 68%;
            border: none;
            height: 2px;
            background-color: #5c4e4e91;
        }

        @keyframes active-opacity-close {
            0% {
                opacity: 1;
            }

            100% {
                opacity: 0;
            }
        }

        @keyframes active-opacity-show {
            0% {
                opacity: 0;
            }

            100% {
                opacity: 1;
            }
        }

        .active-opacity-show {
            animation: active-opacity-show 1s ease-in-out;
        }

        .active-opacity-close {
            animation: active-opacity-close 1s ease-in-out;
        }

        #sentence_hxh {
            transform: translateX(10vw);
            width: 80vw;
        }

        #sentence_hxh_main {
            font-size: 1.5rem;
            font-weight: bold;
            text-align: left;
            color: rgba(240, 255, 255, 0.966);
            width: 75%;
        }

        #sentence_hxh_from {
            font-size: 1rem;
            text-align: right;
            color: rgba(245, 245, 245, 0.9);
            width: 75%;
        }

        .container-links {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-gap: 1rem;
            margin-top: 2rem;
        }

        .container-link {
            margin: 0 1rem;
            background-color: #d4a3a9b9;
            border-radius: 10px;
            padding: 1rem;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: all 0.3s ease-in-out;
        }

        .container-link:hover {
            background-color: #f0abb3b9;
            cursor: pointer;
        }

        .container-links a {
            text-decoration: none;
            color: rgba(0, 0, 0, 0.705);
            font-size: 2rem;
            transition: all 0.3s ease-in-out;
        }

        .container-links a:hover {
            color: rgba(255, 255, 255, 0.705);
            transform: scale(1.1);
        }

        .container-links i {
            font-size: 1.5rem;
            font-weight: bold;
        }
    </style>
</head>

<body class="active-opacity-show">
    <div class="container">
        <div class="container-header">
            <img src="./malisa.jpg" alt="malisa233">
            <h1>I'm Malisa</h1>
        </div>
        <hr>
        <div class="container-body">
            <div id="sentence_hxh" onclick="loadHxh()">
                <div id="sentence_hxh_main">这里应当是一句话</div>
                <div id="sentence_hxh_from">————「韩小韩」</div>
            </div>
            <div class="container-links">
                <div class="container-link">
                    <a href="http://103.40.13.88:44449" target="_blank">
                        <i class='bx bx-cloud'>网盘</i>
                    </a>
                </div>
                <div class="container-link">
                    <a href="https://space.bilibili.com/1504431846" target="_blank">
                        <i class='bx bx-tv'>B站</i>
                    </a>
                </div>
                <div class="container-link">
                    <a href="https://github.com/malisa233" target="_blank">
                        <i class='bx bxl-github'>Github</i>
                    </a>
                </div>
                <div class="container-link">
                    <a href="http://103.40.13.88:44447/chat" target="_blank">
                        <i class='bx bx-chat'>MLISA大模型</i>
                    </a>
                </div>
            </div>
            
        </div>
        <hr style="margin-top: 30px;">
        <div class="container-footer">
            <p>© 2023 - 2024 & Made by malisa</p>
        </div>
    </div>

    <script>
        window.onload = function () {
            loadHxh();
            setInterval(loadHxh, 50000);
        }

        async function loadHxh() {
            const sentence_hxh = document.getElementById('sentence_hxh');
            sentence_hxh.classList.remove('active-opacity-show');
            sentence_hxh.classList.add('active-opacity-close');

            await fetch('https://api.vvhan.com/api/text/love?type=json')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('sentence_hxh_main').innerHTML = `「${data.data.content}」\n`
                })

            sentence_hxh.classList.remove('active-opacity-close');
            sentence_hxh.classList.add('active-opacity-show');
        }
    </script>
</body>

</html>